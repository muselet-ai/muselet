---
interface Props {
  title?: string;
}
const { title } = Astro.props;
---
<div class="rounded-lg border border-border bg-surface overflow-hidden">
  {title && <div class="px-4 py-2 border-b border-border text-xs text-text-muted font-mono">{title}</div>}
  <pre class="p-4 text-sm font-mono text-text overflow-x-auto leading-relaxed"><slot /></pre>
</div>
